<%if current_user.wishlists.empty?%>
  <form id="wishlist-button" action="/wishlists" method="POST">
    <button type="submit">Create Wish List</button>
  </form>
<% else%>
  <form id="wishlist-button" action="/wishlists" method="GET">
    <button type="submit">My Wish List</button>
  </form>
<% end %>

  <div id="exchange-list">
    <ul>
      <% @events.each do |ev| %>
        <li> <a href="/events/<%= ev.id %>"> <%= ev.title %></a> </li>
      <% end %>
    </ul>

  </div>

</div>
